<h1>Welcome, <%=@user.username%></h1>
<h3>Here are some recipes</h3>
<%if !@recipes.empty?%>
    <%@recipes.each do |recipe|%>
        <div>
            <h4><a href="/recipes/<%=recipe.id%>"><%=recipe.title%></a></h4>
            <%if !recipe.comments.empty?%>
                <p><%=recipe.comments.last%></p>
            <%end%>
        </div>
    <%end%>
<%end%>        

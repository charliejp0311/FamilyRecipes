<div>
    <h1>Welcome, <%=@user.username%></h1>
    <h2><%=@recipe.title%> was writen by <%=@author%></h2>
    <form method="get" action='/recipes'>
        <label for="recipes">Lets make a recipe</label><br>
        <input type="submit" value="Recipes">
    </form>
</div>
<%if @user == @recipe.user%>
    <form method="get" action="recipes/@recipe.id/edit">
        <input type="submit" value="Edit">
    </form>
<%end%>
<form method="post" action="/recipes/#{@recipe.id}/comment">
    <label for="comment">Comment:<label>
    <input type="textarea" name="comment">
    <input type="submit" value="Comment">
</form>
<%if @comments %>
    <%@recipe.comments.each do |comment|%>
        <div>
        <p><b><%=comment.user%></b></p>
        <p><%=comment.comment%></p>
        </div>
    <%end%>    
<%end%>

<h1>Welcome, <%=@user.username%></h1>
<%if !@recipes.empty? %>
    <%count = 0%>
    <%@recipes.each do |recipe|%>
        <%if recipe.user == @user%>
            <%count += 1%>
        <%end%>
    <%end%>
    <h3>You have <%=count%> recipes!</h3>
<% end %>

<form method="get" action='/recipes'>
    <label for="recipes">Lets make a recipe</label><br>
    <input type="submit" value="Recipes">
</form>

